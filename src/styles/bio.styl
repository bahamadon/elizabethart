@import "kouto-swiss"
@import url(http://fonts.googleapis.com/css?family=Lato:400,900&subset=latin)

darken = 0.6
darkenOverlay = rgba(0, 0, 0, darken)


#backPattern
  background-image  linear-gradient( darkenOverlay, darkenOverlay ), url(../images/trimmedPainting.jpg)
  background-color #AAA
  background-blend-mode overlay
  background-size cover
  height 100vh
  font-family: 'Lato', sans-serif
  position relative


  #subhead
    font-weigth 400
    font-size 2rem
    color white
    position absolute
    top 20%
    left 10%

  #mainhead
    font-weight: 900
    color: white
    text-transform: uppercase
    font-size: 5rem
    position absolute
    top 10%
    left 10%

  #menu-container
    position absolute
    left 20px
    top 25px
    width 50px
    height 50px
    opacity 0.75

  #menu-box
    position absolute
    left 50px
    top 10px

section
  position relative
  top 100px
  font-size 1rem
  #sidebar
    lost-column 1/3

    img
      display block
      width 100%
      height auto
      margin-bottom 10rem

  #mainbar
    lost-column 2/3
